<core:View xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m"
	controllerName="view.Example" 
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:l="sap.ui.layout"
	xmlns:custom="view"
	busyIndicatorDelay="0"
	height="500px"
	width="500px"
	>
	<Page title="Main3">
		<content>
			<VBox>
				<Title text="{viewModel>/sState}" class="sapUiMediumMargin"/>
				
				<VBox visible="{= ${viewModel>/sState} === 'EditState' }">
					<Input class="sapUiMediumMarginBegin"
							value="{viewModel>/sInput1Value}"
							/>
					<Text text=" + "/>
					<Input class="sapUiMediumMarginBegin"
							value="{viewModel>/sInput2Value}"
							/>
				</VBox>
				
			</VBox>
		</content>
		<footer>
			<Toolbar>
				<Button text="Edit" press=".onViewEvent('onEditPressed', $event)" visible="{= ${viewModel>/sState} === 'DisplayState' }" />
				<Button text="Delete" press=".onViewEvent('onDeletePressed', $event)" visible="{= ${viewModel>/sState} === 'DisplayState' }"/>
				<Button text="Cancel" press=".onViewEvent('onCancelPressed', $event)" visible="{= ${viewModel>/sState} === 'EditState' }"/>
				<Button text="Save" press=".onViewEvent('onSavePressed', $event)" visible="{= ${viewModel>/sState} === 'EditState' }"/>
			</Toolbar>
		</footer>
	</Page>
</core:View>