<core:View xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m"
	controllerName="view.Main" 
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:l="sap.ui.layout"
	xmlns:custom="view"
	>
	<Page title="StateMachine">
		<content>
			<VBox>
				<Title id="idStateText" class="sapUiMediumMargin"/>
				<HBox>
					<Input id="idInput"
							class="sapUiMediumMarginBegin"
							required="true"
							description="some random input"/>
				</HBox>
			</VBox>
		</content>
		<footer>
			<Toolbar>
				<Button id="idEditButton" text="Edit" press="onEditPressed" />
				<Button id="idDeleteButton" text="Delete" press="onDeletePressed" />
				<Button id="idCancelButton" text="Cancel" press="onCancelPressed" />
				<Button id="idSaveButton" text="Save" press="onSavePressed" />
			</Toolbar>
		</footer>
	</Page>
</core:View>